<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Refind" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="android:statusBarColor">@color/gray</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item> <!-- Adjust text size -->
    </style>

    <style name="Theme.Refind" parent="Base.Theme.Refind" />

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="itemIconSize">32dp</item>
    </style>
</resources>
